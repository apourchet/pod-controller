{
    "containers": [
        {
            "name": "main",
            "process": {
                "args": ["sleep", "1000"]
            },
            "livenessProbe": {
                "exec": ["/bin/sh", "-c", "true"],
                "initialDelaySeconds": 1,
                "periodSeconds": 2,
                "timeoutSeconds": 1,
                "successThreshold": 1,
                "failureThreshold": 1
            }
        },
        {
            "name": "sidecar",
            "process": {
                "args": ["sleep", "1001"]
            },
            "livenessProbe": {
                "exec": ["/bin/sh", "-c", "true"],
                "initialDelaySeconds": 1,
                "periodSeconds": 2,
                "timeoutSeconds": 1,
                "successThreshold": 1,
                "failureThreshold": 1
            }
        }
    ]
}
