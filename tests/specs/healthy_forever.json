{
    "containers": [
        {
            "name": "main",
            "process": {
                "args": ["/bin/sh", "-c", "touch /tmp/health && sleep 1000"]
            },
            "livenessProbe": {
                "exec": ["/bin/sh", "-c", "sleep 1 && cat /tmp/health"],
                "initialDelaySeconds": 1,
                "periodSeconds": 2,
                "timeoutSeconds": 2,
                "successThreshold": 1,
                "failureThreshold": 1
            }
        }
    ]
}
